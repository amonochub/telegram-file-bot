# Production Environment Configuration Template
# ИНСТРУКЦИЯ: Скопируйте этот файл в .env и установите реальные значения
# НЕ КОММИТЬТЕ .env файл с реальными токенами!

# Telegram Bot Configuration
BOT_TOKEN=your_production_bot_token_here
ALLOWED_USER_ID=123456789,987654321

# Yandex.Disk Configuration  
YANDEX_DISK_TOKEN=your_production_yandex_disk_token_here
YANDEX_ROOT_PATH=disk:/bot_files

# Redis Configuration
REDIS_URL=redis://redis:6379
# REDIS_PASSWORD=your_secure_redis_password_here

# Logging Configuration
LOG_LEVEL=INFO
ENVIRONMENT=production

# File Upload Configuration
MAX_FILE_SIZE=100000000
UPLOAD_DIR=/bot_files
TEMP_DIR=temp

# Cache Configuration
CACHE_TTL=3600
MAX_BUFFER_SIZE=100

# External APIs
CBR_API_URL=https://www.cbr.ru/scripts/XML_daily.asp?date_req={for_date}
CBR_API_TIMEOUT=30
CBR_RETRY_ATTEMPTS=3

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PORT=8080
METRICS_PORT=9090

# Security Configuration
RATE_LIMIT_PER_MINUTE=60
MAX_CONCURRENT_REQUESTS=10

# OCR Configuration
OCR_LANGUAGES=rus+eng
OCR_TIMEOUT=300

# Monitoring Configuration
ENABLE_METRICS=true
ENABLE_TRACING=false

# Database Configuration (если будет добавлена БД)
# DATABASE_URL=postgresql://user:password@localhost:5432/botdb

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=7

# SSL/TLS Configuration
# SSL_CERT_PATH=/etc/ssl/certs/bot.crt
# SSL_KEY_PATH=/etc/ssl/private/bot.key

# Development/Debug (только для разработки)
# DEBUG=false
# TESTING=false
